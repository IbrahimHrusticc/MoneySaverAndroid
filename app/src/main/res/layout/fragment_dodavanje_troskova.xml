<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/naslovTxt"
        android:text="MONEY SAVER"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="24dp"/>

    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/naslovTxt"
        android:id="@+id/naslovTroskaTxt"
        android:text="DODAVANJE TROŠKA"
        android:gravity="center"
        android:textColor="#000"
        android:textSize="16dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/naslovTroskaTxt"
        android:id="@+id/odabirDatumaTxt"
        android:text="Odaberite datum:"
        android:gravity="center"
        android:textColor="#000"
       />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datumPicker"
        android:layout_below="@id/odabirDatumaTxt"
        android:gravity="center"
        android:textSize="24dp"
        android:text="Odabir datuma"
        android:layout_marginBottom="16dp"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/odabirAktivnostiTxt"
        android:text="Odaberite aktivnost:"
        android:layout_marginTop="12dp"
        android:textColor="#000"
        android:layout_below="@id/datumPicker"
        android:gravity="center"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/odabirAktivnostiTxt"
        android:id="@+id/odabirAktivnostiUnos"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="48dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trosakTxt"
        android:text="Trošak (u KM):"
        android:layout_marginTop="12dp"
        android:textColor="#000"
        android:gravity="center"
        android:layout_below="@id/odabirAktivnostiUnos"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trosakUnos"
        android:inputType="numberDecimal"
        android:hint="0.00 KM"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/trosakTxt"
        android:gravity="center"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spremiTrosakBtn"
        android:layout_marginBottom="16dp"
        android:layout_below="@id/trosakUnos"
        android:text="SPREMI"
        android:layout_toLeftOf="@id/odustaniBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/odustaniBtn"
        android:layout_below="@id/trosakUnos"
        android:text="ODUSTANI"
        android:layout_alignParentRight="true"/>

</RelativeLayout>